<h1>Customer Accounts</h1>

<h3><%= @customer.name  %></h3>
<% @accounts.each do |account| %>
  <section id="customer_accounts-<%= account.id  %>">
    <h3> Name: <%= account.acct_name %></h3>
    <p> <%= account.has_money %> </p>
    <p> <%= account.dollar_amount %> </p>
  </section>
<% end %>
<h4><%= link_to "Create Account", "/customers/#{@customer.id}/accounts/new"%></h4>
<%= link_to 'Alphabetize', "/customers/#{@customer.id}/accounts?order=alphabetize" %>
